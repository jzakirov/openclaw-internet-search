{
  "id": "internet-search",
  "kind": "web-search",
  "name": "Internet Search",
  "description": "Web search via SearXNG. Registers the internet_search tool.",
  "version": "0.3.1",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "searxngUrl": { "type": "string" },
      "searxngToken": { "type": "string" }
    },
    "required": ["searxngUrl"]
  },
  "uiHints": {
    "searxngUrl": { "label": "SearXNG URL", "placeholder": "https://search.example.com/" },
    "searxngToken": { "label": "SearXNG Token", "sensitive": true }
  }
}
